require 'rubygems'
require 'spec'
require 'rake/clean'
require 'rake/gempackagetask'
require 'spec/rake/spectask'
require 'pathname'

CLEAN.include '{log,pkg}/'

spec = Gem::Specification.new do |s|
  s.name             = 'merb_datamapper'
  s.version          = '0.9.3'
  s.platform         = Gem::Platform::RUBY
  s.has_rdoc         = true
  s.extra_rdoc_files = %w[ README LICENSE TODO ]
  s.summary          = 'DataMapper plugin providing DataMapper support for Merb'
  s.description      = s.summary
  s.author           = 'Jason Toy'
  s.email            = 'jtoy@rubynow.com'
  s.homepage         = 'http://datamapper.org'
  s.require_path     = 'lib'
  s.files            = FileList[ 'datamapper_generators/**/*', '{lib,spec}/**/*.{rb,sample}', 'spec/spec.opts', 'Rakefile', *s.extra_rdoc_files ]
  # merb_datamapper now depends on edge merb, see 781d75a7 and #273
  s.add_dependency('merb-core', '>= 0.9.3')
  s.add_dependency('dm-core',   '= 0.9.0.1')
end

task :default => [ :spec ]

WIN32 = (RUBY_PLATFORM =~ /win32|mingw|cygwin/) rescue nil
SUDO  = WIN32 ? '' : ('sudo' unless ENV['SUDOLESS'])

Rake::GemPackageTask.new(spec) do |pkg|
  pkg.gem_spec = spec
end

desc "Install #{spec.name} #{spec.version}"
task :install => [ :package ] do
  sh "#{SUDO} gem install pkg/#{spec.name}-#{spec.version} --no-update-sources", :verbose => false
end

desc 'Release the current version on rubyforge'
task :release => [ :package ] do
  sh %{rubyforge add_release merb #{spec.name} #{spec.version} pkg/#{spec.name}-#{spec.version}.gem}
end

desc 'Run specifications'
Spec::Rake::SpecTask.new(:spec) do |t|
  t.spec_opts << '--options' << 'spec/spec.opts' if File.exists?('spec/spec.opts')
  t.spec_files = Pathname.glob(Pathname.new(__FILE__).dirname + 'spec/**/*_spec.rb')
end
